$outWidth = 4200px
$outHeight = 3250px
$displayScale = 0.25

body
  background-color: black
  padding: 0
  margin: 0 15px
  width: $outWidth * $displayScale
  height: $outHeight * $displayScale

#notice
  position: fixed
  top: 0
  background-color: white
  padding: 5px
  opacity: 0
  transition: opacity 500ms
  width: 100%
  text-align: center
  z-index: 1

  &.shown
    opacity: 1

.cropFrame
  overflow: hidden
  position: relative
  display: inline-block

.cropImage
  position: absolute
  top: 0
  left: 0
  cursor: move
  max-width: none

#calendar
  width:  $outWidth
  height: $outHeight
  padding: 0
  margin-top: 20px
  position: relative
  background-color: black
  transform-origin: top left
  transform: scale($displayScale)

  & > div
    margin: 0
    padding: 0
    background-color: #444
    position: absolute
    cursor: pointer

    &:hover
      background-color: #666

    body.deleting &:hover
      background-color: #444
      cursor: default
      img
        opacity: 0.3
        cursor: not-allowed

input[type=file]
  display: none

#delete
  &:before
    content: "Delete"
  body.deleting &:before
    content: "Cancel"

#template
  display: none

div > textarea
  box-sizing: border-box;
  overflow: hidden;
  width: 100%;
  height: 325px;
  background-color: transparent;
  position: absolute;
  bottom: 0;
  left: 0;
  border-style: none;
  resize: none;
  font-size: 72pt;
  font-family: "Myriad Pro";
  font-weight: bold;
  outline-style: none;
  text-align: center;
  color: white;
  text-shadow: 0 0 30px #000,
               0 0 60px rgba(0,0,0,0.9),
               0 0 100px rgba(0,0,0,0.8);